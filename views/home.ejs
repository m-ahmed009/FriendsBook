<%- include('layout/header') %>

  <!-- Page Content -->
  <div class="container-fluid mt-4">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3">
        <div class="shadow-sm p-3 bg-white rounded">
          <h6 class="text-muted">Sponsored</h6>
          <div class="card mb-2">
            <img src="/images/ad1.jpg" class="card-img-top" alt="Ad 1">
            <div class="card-body p-2">
              <p class="card-text small">Check out this amazing offer!</p>
            </div>
          </div>
          <div class="card">
            <img src="/images/ad2.jpg" class="card-img-top" alt="Ad 2">
            <div class="card-body p-2">
              <p class="card-text small">Sponsored product by XYZ.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Feed Column -->
      <div class="col-md-6">
        <div class="shadow-sm mb-4 p-3 bg-white rounded">
          <form action="/api/post/create" method="POST" enctype="multipart/form-data">
            <textarea class="form-control mb-2" name="content" rows="3"
              placeholder="What's on your mind, <%= user.name %>?" required></textarea>
            <input type="file" name="media" class="form-control mb-2" id="mediaInput">
            <div id="mediaPreview" class="mt-2 mb-4"></div>

            <button class="btn btn-primary w-100"><i class="fa fa-paper-plane me-1"></i>Post</button>
          </form>
        </div>

        <!-- Posts -->
        <% posts.forEach(post=> { %>
          <div class="card mb-3 shadow-sm position-relative">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <img src="<%= post.userId.profilePic %>" width="40" height="40" class="rounded-circle me-2" />
                  <strong><a href="/Friendbook/<%= post.userId.username %>">
                      <%= post.userId.name %>
                    </a></strong>
                </div>

                <% if (userIdStr===post.userId._id.toString()) { %>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-light" data-bs-toggle="dropdown">
                      <i class="fa fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li>
                        <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#editPostModal<%= post._id %>">
                          <i class="fa fa-edit me-2"></i>Edit
                        </a>
                      </li>
                      <li>
                        <form action="/api/post/<%= post._id %>?_method=DELETE" method="POST">
                          <button type="submit" class="dropdown-item text-danger">
                            <i class="fa fa-trash me-2"></i>Delete
                          </button>
                        </form>
                      </li>
                    </ul>
                  </div>
                  <% } %>
              </div>

              <p class="mt-2">
                <%= post.content %>
              </p>

              <% if (post.media) { %>
                <% if (post.media.endsWith('.mp4')) { %>
                  <video controls class="w-100 mb-2" style="height: 300px; object-fit: cover;">
                    <source src="<%= post.media %>" type="video/mp4">
                  </video>
                  <% } else { %>
                    <img src="<%= post.media %>" class="rounded mb-2"
                      style="width: 100%; height: 300px; object-fit: cover;" />
                    <% } %>
                      <% } %>

                        <small class="text-muted d-block">Posted on <%= new Date(post.createdAt).toLocaleString() %>
                            </small>
            </div>
          </div>

          <!-- Edit Modal -->
          <div class="modal fade" id="editPostModal<%= post._id %>" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
              <form class="modal-content" action="/api/post/<%= post._id %>?_method=PUT" method="POST"
                enctype="multipart/form-data">
                <div class="modal-header">
                  <h5 class="modal-title">Edit Post</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                  <textarea name="content" class="form-control" rows="4" required><%= post.content %></textarea>
                </div>
                <% if (post.media) { %>
                  <% if (post.media.endsWith('.mp4')) { %>
                    <video controls class="w-100 mb-2">
                      <source src="<%= post.media %>">
                    </video>
                    <% } else { %>
                      <img src="<%= post.media %>" class="img-fluid mb-2 rounded" />
                      <% } %>
                        <% } %>

                          <!-- Media file input -->
                          <input type="file" name="media" class="form-control mb-2">
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                          </div>
              </form>
            </div>
          </div>
          <% }) %>
      </div>

      <!-- Profile Suggestions -->
      <div class="col-md-3">
        <div class="shadow-sm p-3 bg-white rounded">
          <h6 class="mb-3">People you may know</h6>
          <% otherUsers.forEach(u=> { %>
            <div class="d-flex align-items-center mb-3">
              <img src="/images/<%= u.profilePic || 'user.avif' %>" width="40" height="40"
                class="rounded-circle me-2" />
              <div>
                <strong>
                  <%= u.name %>
                </strong><br />
                <small class="text-muted">@<%= u.username %></small>
              </div>
              <form action="/friend/request/<%= u._id %>" method="POST" class="ms-auto">
                <button class="btn btn-sm btn-outline-primary"><i class="fa fa-user-plus"></i></button>
              </form>
            </div>
            <% }) %>
        </div>
      </div>

    </div>
  </div>

  <%- include('layout/footer') %>

    <script>
      const mediaInput = document.getElementById('mediaInput');
      const mediaPreview = document.getElementById('mediaPreview');

      mediaInput.addEventListener('change', function () {
        const file = this.files[0];
        mediaPreview.innerHTML = '';

        if (!file) return;

        const fileType = file.type;

        const reader = new FileReader();
        reader.onload = function (e) {
          if (fileType.startsWith('image')) {
            const img = document.createElement('img');
            img.src = e.target.result;
            img.className = 'img-fluid rounded';
            mediaPreview.appendChild(img);
          } else if (fileType.startsWith('video')) {
            const video = document.createElement('video');
            video.src = e.target.result;
            video.controls = true;
            video.className = 'w-100 rounded';
            mediaPreview.appendChild(video);
          } else {
            mediaPreview.textContent = 'Unsupported file format.';
          }
        };

        reader.readAsDataURL(file);
      });
    </script>