<%- include('layout/header') %>

  <div class="container mt-4">
    <!-- Profile Header -->
    <div class="card shadow-sm mb-4">
      <div class="card-body d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
          <img src="<%= profileUser.profilePic || '/images/user.avif' %>" class="rounded-circle me-3" width="100"
            height="100" style="object-fit: cover;">
          <div>
            <h4 class="mb-0">
              <%= profileUser.name %>
            </h4>
            <p class="text-muted">@<%= profileUser.username %>
            </p>
            <% if (!isOwner) { %>
              <p class="mb-0"><strong>Bio:</strong>
                <%= profileUser.bio || 'No bio yet' %>
              </p>
              <% } %>
          </div>
        </div>
        <% if (isOwner) { %>
          <button class="btn btn-sm btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#updateProfileForm">
            Edit Profile
          </button>
          <% } %>
      </div>
    </div>

    <% if (isOwner) { %>
      <div id="updateProfileForm" class="collapse mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="mb-3">Update Your Profile</h5>
            <form action="/api/user/update?_method=PUT" method="POST" enctype="multipart/form-data">
              <div class="row g-2">
                <div class="col-md-6">
                  <input class="form-control mb-2" type="text" name="name" value="<%= profileUser.name %>" required
                    placeholder="Name">
                  <input class="form-control mb-2" type="text" name="bio" value="<%= profileUser.bio || '' %>"
                    placeholder="Bio">
                  <input class="form-control mb-2" type="file" name="profilePic">
                  <button class="btn btn-warning">Update Profile</button>
                </div>
                <div class="col-md-6 text-center">
                  <img src="<%= profileUser.profilePic || '/images/user.avif' %>" class="rounded-circle" width="150"
                    height="150" style="object-fit: cover;">
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <% } %>

        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="mb-4">Posts by <%= profileUser.name %>
            </h5>
            <% if (posts.length===0) { %>
              <p class="text-muted">No posts yet.</p>
              <% } %>

                <% posts.forEach(post=> { %>
                  <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                      <div class="d-flex align-items-center mb-2">
                        <img src="<%= post.userId.profilePic || '/images/user.avif' %>" width="40" height="40"
                          class="rounded-circle me-2">
                        <strong>
                          <%= post.userId.name %>
                        </strong>
                        <span class="text-muted small ms-2">
                          <%= new Date(post.createdAt).toLocaleString() %>
                        </span>
                      </div>
                      <p>
                        <%= post.content %>
                      </p>
                      <% if (post.media) { %>
                        <% if (post.media.endsWith('.mp4')) { %>
                          <video class="w-100 rounded mb-2" controls style="height: 250px; object-fit: cover;">
                            <source src="<%= post.media %>" type="video/mp4">
                          </video>
                          <% } else { %>
                            <img src="<%= post.media %>" class="rounded mb-2"
                              style="width: 100%; height: 250px; object-fit: cover;">
                            <% } %>
                              <% } %>
                                <small class="text-muted d-block">Posted on <%= new
                                    Date(post.createdAt).toLocaleString() %></small>

                    </div>
                  </div>
                  <% }) %>
          </div>
        </div>
  </div>

  <%- include('layout/footer') %>